@page
@model WebHomePro.Pages.Admin.ActivarLineaModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>HomePro - Activar Línea</title>
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" />
    <link href="~/css/StyleMenuAdmin.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-page="/Admin/MenuAdmin">
                <img src="~/img/LOGO HOMEPRO.png" alt="Logo" style="height: 5rem;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive">
                Menu <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    <li class="nav-item">
                        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-page="/Admin/Nuevas_LineasTELE">
                            Nuevas líneas telefónicas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-page="/Admin/ActivarLinea">
                            Activar una línea recién vendida
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-page="/Admin/DesactivarLinea">
                            Devolución de una línea telefónica
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-page="/Admin/CalcularFacturacion">
                            Calcular facturación
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-page="/Admin/Nuevos_Admin">
                            Nuevos usuarios administrativos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-page="/Login">
                            Salir del Sitio
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('@Url.Content("~/img/home-bg.jpg")')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="site-heading text-center">
                <h1>Activar Línea</h1>
                <span class="subheading">Gestión de líneas telefónicas</span>
            </div>
        </div>
    </header>

    <!-- Contenido principal -->
    <section class="py-5">
        <div class="container">

            @* Mensajes del proceso *@
            @if (!string.IsNullOrWhiteSpace(Model.Flash))
            {
                var ok = Model.Flash.Contains("correcta", StringComparison.OrdinalIgnoreCase)
                || Model.Flash.Contains("éxito", StringComparison.OrdinalIgnoreCase)
                || Model.Flash.Contains("exitos", StringComparison.OrdinalIgnoreCase);
                <div class="alert @(ok ? "alert-success" : "alert-danger")">@Model.Flash</div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.MensajeValidacion))
            {
                <div class="alert alert-warning">@Model.MensajeValidacion</div>
            }

            <div class="row">
                <!-- GRID DE LÍNEAS DISPONIBLES -->
                <div class="col-md-7">
                    <h4 class="text-center mb-4">Líneas disponibles</h4>
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Teléfono</th>
                                <th>ID Tarjeta</th>
                                <th>Tipo</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.LineasDisponibles != null && Model.LineasDisponibles.Count > 0)
                            {
                                foreach (var l in Model.LineasDisponibles)
                                {
                                    <tr>
                                        <td>@l.NumeroTelefono</td>
                                        <td>@l.IdentificadorTarjeta</td>
                                        <td>@l.TipoServicio</td>
                                        <td>
                                            <button type="button"
                                                    class="btn btn-primary btn-sm"
                                                    onclick="seleccionarLinea('@l.NumeroTelefono','@l.IdTelefono','@l.IdentificadorTarjeta','@l.TipoServicio')">
                                                Seleccionar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="4" class="text-center">No hay líneas nuevas disponibles.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- FORMULARIO DE ACTIVACIÓN -->
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-header bg-dark text-white">
                            <h4 class="mb-0">Datos de activación</h4>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-page-handler="Activar">
                                @Html.AntiForgeryToken()

                                <div class="mb-3">
                                    <label class="form-label">Número</label>
                                    <input class="form-control" name="NumeroTelefono" id="NumeroTelefono"
                                           value="@Model.NumeroTelefono" readonly />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">ID Teléfono</label>
                                    <input class="form-control" name="IdTelefono" id="IdTelefono"
                                           value="@Model.IdTelefono" readonly />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">ID Tarjeta</label>
                                    <input class="form-control" name="IdTarjeta" id="IdTarjeta"
                                           value="@Model.IdTarjeta" readonly />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Tipo</label>
                                    <input class="form-control" name="TipoServicio" id="TipoServicio"
                                           value="@Model.TipoServicio" readonly />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="CedulaCliente">Cédula</label>
                                    <input class="form-control" name="CedulaCliente" id="CedulaCliente"
                                           value="@Model.CedulaCliente" />
                                </div>

                                <button class="btn btn-success w-100" type="submit">Activar</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /FORM -->
            </div>
        </div>
    </section>

    <footer class="border-top">
        <div class="container px-4 px-lg-5">
            <div class="small text-center text-muted fst-italic">Derechos Reservados &copy; HomePro 2025</div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Rellena el formulario sin postback
        function seleccionarLinea(numero, idTel, idTarj, tipo) {
            document.getElementById('NumeroTelefono').value = numero;
            document.getElementById('IdTelefono').value = idTel;
            document.getElementById('IdTarjeta').value = idTarj;
            document.getElementById('TipoServicio').value = tipo;
            // Limpia mensajes previos de validación en cliente si los tuvieras
        }
    </script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
